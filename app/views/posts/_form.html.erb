<%= form_for @post do |f| %>

    <!-- Not tested yet: append user id to post  -->
    <%= f.hidden_field :user_id, :value => @post.user_id%>

    <p>
      <%= f.label :image %> <br>
      <%= f.file_field :image %>
    </p>

    <div class="form-group">
       <%= f.label :title %>
       <%= f.text_field :title, placeholder: ". . ." %>
    </div>

    <div class="form-group">
       <%= f.label :description %>
       <%= f.text_area :description, placeholder: ". . ."   %>
    </div>


    <%= f.submit (@post.new_record? ? "Create" : "Update") %>

<% end %>
