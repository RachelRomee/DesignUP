<%= form_for @post do |f| %>

    <%= f.hidden_field :user_id, :value => @post.post.id%>

    <p>
      <%= f.label :image %> <br>
      <%= f.file_field :image %>
    </p>

    <div class="form-group">
       <%= f.label :title %>
       <%= f.text_field :title, placeholder: ". . ." %>
    </div>

    <div class="form-group">
       <%= f.label :description %>
       <%= f.text_area :year, placeholder: ". . ."   %>
    </div>

    <div class="form-group">
       <%= f.label :cover %>
       <%= f.text_field :cover, placeholder: "url . . ."   %>
    </div>

    <%= f.submit (@post.new_record? ? "Create" : "Update") %>

<% end %>
