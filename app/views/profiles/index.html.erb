<h1>Profiles</h1>

<div class="row">
  <div class="large-12 columns">
    <% @profiles.each do |profile| %>
      <div class="large-4 columns row">
        <div class="user-profiles">
          <%= image_tag profile.image.thumbnail.url if profile.image.present? %>
          <p><%= link_to profile.user.name, profile %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
