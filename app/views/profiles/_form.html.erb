<!-- Form for adding profile info -->
<%= form_for @profile do |f| %>
<div><%= hidden_field_tag :user_id, :value => @post.user_id%>

  <!-- Row for complete form -->
  <div class="row">
    <div class="small-12">
      <!-- Row for expertise -->
      <div class="row">
        <div class="small-6 columns">
          <%= f.label :expertise, class: "right inline" %>
          <%= f.text_field :expertise %>
        </div>
      </div>
      <!-- Row for city -->
      <div class="row">
        <div class="small-6 columns">
          <%= f.label :city %>
          <%= f.text_field :city %>
        </div>
      </div>
      <!-- Row for country -->
      <div class="row">
        <div class="small-6 columns">
          <%= f.label :country %>
          <%= f.text_field :country %>
        </div>
      </div>
      <!-- Row for country -->
      <div class="row">
        <div class="small-6 columns">
          <%= f.label :website %>
          <%= f.text_field :website %>
        </div>
      </div>
      <!-- Row for country -->
      <div class="row">
        <div class="small-6 columns">
          <%= f.label :bio %>
          <%= f.text_area :bio %>
        </div>
      </div>
      <!-- Submit/Update button -->
      <div class="row">
        <%= f.submit "Update", class: "button" %>
      </div>
    </div>
  </div> <!-- END Row for complete form -->
<% end %>

<!-- Add back button -->
<%= link_to "Back", profile_path(@profile), class: "button" %>
