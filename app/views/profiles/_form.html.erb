<!-- Form for adding profile info -->
<%= form_for @profile do |f| %>

  <!-- Row for complete form -->
  <div class="row">
    <div class="small-10">
      <div class="row">
        <div class="small-2 columns">
          <%= f.label :expertise, class: "right inline" %>
        </div>
        <div class="small-10 columns">
          <%= f.text_field :expertise %>
        </div>
      </div>
    </div>
  </div> <!-- END Row for complete form -->
<% end %>


