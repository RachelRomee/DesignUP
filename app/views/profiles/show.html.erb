<h1><%= @profile.user.name %></h1>

<!-- Should only be for own profile! -->
<%= link_to "Edit", edit_profile_path(@profile), class: "button", style: "float: right" %>


<%= image_tag @profile.image.url if @profile.image.present? %>


<p><%= @profile.expertise %></p>
<p><%= @profile.city %></p>
<p><%= @profile.country %></p>
<p><%= @profile.website %></p>
<%= @profile.bio %>


<h2>Designs</h2>

<!-- Hier komen de designs van de user -->
<p><% @profile.user.posts.each do |post| %></p>

  <%= image_tag post.image.url if post.image.present? %>
<% end %>
