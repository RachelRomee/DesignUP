

<div class="row">
  <div class="columns small-6">
    <img src="https://s-media-cache-ak0.pinimg.com/originals/73/b7/f5/73b7f5030b7d58939a1ac581d3f47c1f.gif" />
  </div>
  <div class="columns small-6">
<br />
<h2>Log in</h2>
<br />
<br />
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class:"sign-form-title" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, class:"sign-form-title"  %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, class:"sign-form-title"  %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>


</div>
